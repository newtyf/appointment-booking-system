  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Python Debugger: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.app:app", "--reload"],
      "cwd": "${workspaceFolder}/backend",
      "justMyCode": true,
      "jinja": false
    },
    {
      "name": "Attach Python Debugger: FastAPI",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 50729
      },
      "justMyCode": true,
      "jinja": false
    }
  ]
}